{
  "name": "glsl-playlab",
  "version": "0.3.0",
  "private": true,
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "node scripts/dev-server.mjs",
    "build": "node scripts/build.mjs",
    "test": "node scripts/run-tests.mjs",
    "desktop:dev": "node scripts/desktop-dev.mjs",
    "desktop:package": "node scripts/desktop-package.mjs"
  },
  "build": {
    "appId": "com.glslplaylab.app",
    "productName": "GLSL PlayLab",
    "directories": {
      "output": "release",
      "buildResources": "build-resources"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.mjs"
    },
    "mac": {
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.6.5"
  }
}
